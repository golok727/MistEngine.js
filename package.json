{
  "name": "mist-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "./packages/*",
    "./examples/*",
    "./apps/*",
    "./bundles/*"
  ],
  "scripts": {
    "clean:build": "rimraf --glob \"{packages,bundles}/*/{dist,lib}\"",
    "clean:types": "rimraf --glob \"{packages,bundles}/*/lib/**/*.d.ts\"",
    "clean:out": "rimraf out",
    "build:types": "tsc -p tsconfig.types.json && node ./scripts/postTypesBuild.mjs",
    "build:all": "tsc && node ./scripts/build.mjs",
    "postbuild:types": "copyfiles -u 1 \"out/**/*\"",
    "test": "vitest",
    "vite": "vite",
    "run:sandbox": "vite serve ./apps/sandbox -c ./vite.config.js",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/copyfiles": "^2",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.0",
    "workspaces-run": "^1.0.2"
  },
  "packageManager": "yarn@4.1.0"
}
