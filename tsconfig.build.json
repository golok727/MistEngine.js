{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		"paths": {
			"@mist-engine/*": ["./packages/engine/*"],
			"@mist-math/*": ["./packages/math/*"],
			"@/*": ["./packages/*"],
			"@mist/*": ["./packages/*"],

			"@mist-math": ["./packages/math"]
		},
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "./",
		"types": ["@webgpu/types"]
	},
	"include": [
		"packages",
		"bundles",
		"./packages/types/**/*.d.ts",
		"./vite-env.d.ts"
	],
	"exclude": ["node_modules"]
}
