{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		"paths": {
			"@mist-engine/*": ["./packages/engine/*"],
			"@mist-math/*": ["/packages/math/*"],
			"@/*": ["./packages/*"],

			"@mist-math": ["./packages/math"],
			"@mist": ["./packages/engine"]
		},
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"types": ["@webgpu/types", "./types/types.d.ts", "./types/events.d.ts"]
	},
	"include": ["packages", "sandbox", "types/types.d.ts", "types/events.d.ts"]
}
